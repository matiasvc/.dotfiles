# Keyboard Layout
set $keyboard_layout Keyboard Layout: (n) Norwegian, (e) US English
mode "$keyboard_layout" {
	bindsym n exec --no-startup-id setxkbmap no ,mode "default"
	bindsym e exec --no-startup-id setxkbmap us ,mode "default"

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+shift+Z mode "$keyboard_layout"

# Volume
bindsym XF86AudioRaiseVolume exec amixer -q set Master playback 5%+ unmute; exec notify-send "Volume Up"
bindsym XF86AudioLowerVolume exec amixer -q set Master playback 5%- unmute; exec notify-send "Volume Down"

bindsym XF86MonBrightnessUp exec set-brightness +
bindsym XF86MonBrightnessDown exec set-brightness -

