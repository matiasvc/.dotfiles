# Set personal aliases, overriding those provided by oh-my-zsh libs,
# plugins, and themes. Aliases can be placed here, though oh-my-zsh
# users are encouraged to define aliases within the ZSH_CUSTOM folder.
# For a full list of active aliases, run `alias`.
#

# Aliases
alias zshconfig="${EDITOR} ~/.zshrc"
alias ohmyzshconfig="${EDITOR} ~/.oh-my-zsh"
alias i3config="${EDITOR} ~/.dotfiles/i3/config"
alias vimconfig="${EDITOR} ~/.vimrc"
alias kittyconfig="${EDITOR} ~/.dotfiles/kitty/kitty.conf"

# Add custom mkd command which creates a new directory and immediately cd's into it
mkd() {
	mkdir "$1"
	cd "$1"
}

# Called at every shell prompt
precmd() {
	pwd > /tmp/current_shell_dir # Store our current directory in /tmp/current_shell_dir
}

# If the /tmp/current_shell_dir file exits, then we cd any new shell into it
if [ -f /tmp/current_shell_dir ]; then
	cd "`cat /tmp/current_shell_dir`"
fi



