#!/usr/bin/env sh
# A general, all-purpose extraction script.
#
# Default behavior: Extract archive into new directory
# Behavior with `-d` option: Extract contents into a new directory

while getopts "hd" o; do case "${o}" in
	d) extractdirectory="True" ;;
	*) printf "Options:\\n   -c: Extract archive into a new directory.\\n" && exit ;;
esac done

if [ -n "$extractdirectory" ]; then
	archive="$(readlink -f "$*")" &&
	directory="$(echo "$archive" | sed 's/\.[^\/.]*$//')" &&
	mkdir -p "$directory" &&
	cd "$directory" || exit
else
	archive="$(readlink -f "$(echo "$*" | cut -d' ' -f2)")"
fi

[ "$archive" = "" ] && printf "Give archive to extract as argument.\\n" && exit

if [ -f "$archive" ] ; then
	case "$archive" in
		*.tar.bz2|*.tbz2|*.tbz) tar xvjf "$archive" ;;
		*.tar.xz) tar xvJf "$archive" ;;
		*.tar.gz|*.tgz) tar xvzf "$archive" ;;
		*.tar.zst) tar --use-compress-program=unzstd -xvf "$archive" ;;
		*.lzma) unlzma "$archive" ;;
		*.bz2) bunzip2 "$archive" ;;
		*.rar) unrar x -ad "$archive" ;;
		*.gz) gunzip "$archive" ;;
		*.tar) tar xvf "$archive" ;;
		*.zip) unzip "$archive" ;;
		*.Z) uncompress "$archive" ;;
		*.7z) 7z x "$archive" ;;
		*.xz) unxz "$archive" ;;
		*.exe) cabextract "$archive" ;;
		*) printf "extract: '%s' - unknown archive method\\n" "$archive" ;;
	esac
else
	printf "File \"%s\" not found.\\n" "$archive"
fi
